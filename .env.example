# =============================================
# PROCUREMENT SYSTEM FRONTEND - ENVIRONMENT VARIABLES
# Copy this file to .env and update with your values
# =============================================

# API CONFIGURATION
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# APPLICATION CONFIGURATION
VITE_APP_NAME=Procurement System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Online Procurement Management System

# FEATURE FLAGS
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINTENANCE_MODE=false
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true

# UI & THEME CONFIGURATION
VITE_PRIMARY_COLOR=#2563eb
VITE_SECONDARY_COLOR=#64748b
VITE_ACCENT_COLOR=#f59e0b
VITE_DARK_MODE=false
VITE_DEFAULT_THEME=light

# UPLOAD & FILE CONFIGURATION
VITE_MAX_UPLOAD_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
VITE_UPLOAD_CHUNK_SIZE=1048576

# NOTIFICATION CONFIGURATION
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000
VITE_MAX_NOTIFICATIONS=50

# REAL-TIME CONFIGURATION
VITE_ENABLE_SOCKETS=true
VITE_SOCKET_URL=http://localhost:5000
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=3000

# EXTERNAL SERVICES
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# CLOUDINARY CONFIGURATION (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# AUTHENTICATION CONFIGURATION
VITE_TOKEN_REFRESH_INTERVAL=840000  # 14 minutes
VITE_SESSION_TIMEOUT=3600000        # 1 hour
VITE_REMEMBER_ME_DURATION=2592000000 # 30 days

# PAGINATION & DATA CONFIGURATION
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_ITEMS_PER_PAGE_OPTIONS=10,25,50,100
VITE_DEBOUNCE_SEARCH_MS=300

# PERFORMANCE CONFIGURATION
VITE_LAZY_LOAD_THRESHOLD=100
VITE_VIRTUAL_SCROLL_THRESHOLD=1000
VITE_CACHE_DURATION=300000          # 5 minutes

# DATE & TIME CONFIGURATION
VITE_DEFAULT_TIMEZONE=UTC
VITE_DATE_FORMAT=yyyy-MM-dd
VITE_TIME_FORMAT=HH:mm
VITE_DATETIME_FORMAT=yyyy-MM-dd HH:mm

# LOCALIZATION
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# SECURITY CONFIGURATION
VITE_ENABLE_HTTPS_REDIRECT=false
VITE_CSP_ENABLED=true
VITE_XSS_PROTECTION=true

# DEVELOPMENT & DEBUGGING
VITE_LOG_LEVEL=info
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# TESTING CONFIGURATION
VITE_TEST_MODE=false
VITE_MOCK_API=false
VITE_MOCK_DELAY=500

# BUILD CONFIGURATION
VITE_SOURCEMAP=true
VITE_MINIFY=true
VITE_CHUNK_SIZE_WARNING=500

# =============================================
# ENVIRONMENT SPECIFIC OVERRIDES
# These will override the above values in specific environments
# =============================================

# DEVELOPMENT ENVIRONMENT (will be used when VITE_APP_ENV=development)
VITE_APP_ENV=development
VITE_ENABLE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_MOCK_API=false

# PRODUCTION ENVIRONMENT (will be used when VITE_APP_ENV=production)
# VITE_APP_ENV=production
# VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
# VITE_ENABLE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_SOURCEMAP=false

# STAGING ENVIRONMENT (will be used when VITE_APP_ENV=staging)
# VITE_APP_ENV=staging
# VITE_API_BASE_URL=https://staging-api.yourdomain.com/api/v1
# VITE_ENABLE_DEBUG_MODE=true